
<section class="todoapp">
  <header class="header">
    <h1>todos</h1>
    <input class="new-todo" placeholder="What needs to be done?" autofocus phx-keydown="add_todo" phx-hook="addTodo">
  </header>
  <!-- This section should be hidden by default and shown when there are todos -->
  <section class="main">
    <input id="toggle-all" class="toggle-all" type="checkbox">
    <label for="toggle-all">Mark all as complete</label>
    <ul class="todo-list">
      <!-- These are here just to show the structure of the list items -->
      <!-- List items should get the class `editing` when editing and `completed` when marked as completed -->
      <%= for todo <- @todos do %>
        <li class="<%= if todo.complete, do: 'completed' %>">
          <div class="view">
            <%= if todo.complete do %>
              <input
                class="toggle"
                type="checkbox"
                phx-value-id="<%= todo.id %>"
                checked phx-click="toggle_todo"
              >
            <% else %>
              <input
                class="toggle"
                type="checkbox"
                phx-value-id="<%= todo.id %>"
                phx-click="toggle_todo"
              >
            <% end %>
            <label><%= todo.text %></label>
          <button
            class="destroy"
            phx-value-id="<%= todo.id %>"
            phx-click="destroy_todo"
          ></button>
          </div>
          <input class="edit" value="Rule the web">
        </li>
      <% end %>
    </ul>
  </section>
  <!-- This footer should hidden by default and shown when there are todos -->
  <footer class="footer">
    <!-- This should be `0 items left` by default -->
    <span class="todo-count"><strong>0</strong> item left</span>
    <!-- Remove this if you don't implement routing -->
    <ul class="filters">
      <li>
        <a
          class="<%= filter_class(all, @filter) %>"
          href="#/"
          phx-value-filter="all"
          phx-click="toggle_filter"
        >
          All
        </a>
      </li>
      <li>
        <a
          class="<%= filter_class(active, @filter) %>"
          href="#/active"
          phx-value-filter="active"
          phx-click="toggle_filter"
        >
          Active
        </a>
      </li>
      <li>
        <a
          class="<%= filter_class(completed, @filter) %>"
          href="#/completed"
          phx-value-filter="completed"
          phx-click="toggle_filter"
        >
          Completed
        </a>
      </li>
    </ul>
    <!-- Hidden if no completed items are left â†“ -->
    <button class="clear-completed">Clear completed</button>
  </footer>
</section>
<footer class="info">
  <p>Double-click to edit a todo</p>
  <p>Created by <a href="http://github.com/kelsonpw">Kelson Warner</a></p>
  <p>Part of <a href="http://todomvc.com">TodoMVC</a></p>
</footer>
